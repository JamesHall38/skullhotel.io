{
	"name": "skullhotel",
	"version": "1.1.0",
	"type": "commonjs",
	"license": "MIT",
	"main": "electron/main.js",
	"description": "Skull Hotel Game",
	"author": "Skull Hotel Team",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"build:electron": "vite build --config vite.config.electron.js",
		"build:itch": "vite build --config vite.config.itch.js && node fix-paths.js",
		"build:firebase": "vite build",
		"build:steam": "npm run build:electron && electron electron/main.js",
		"build:steam-dist": "npm run build:electron && electron-builder --config.appId=3739730 --win nsis",
		"preview": "vite preview",
		"fix-paths": "node fix-paths.js",
		"electron": "electron ."
	},
	"dependencies": {
		"@gsap/react": "^2.1.2",
		"@react-spring/three": "^10.0.3",
		"@react-three/drei": "^9.122.0",
		"@react-three/fiber": "^8.18.0",
		"@react-three/postprocessing": "^2.16.7",
		"@types/three": "^0.180.0",
		"firebase": "^12.4.0",
		"leva": "^0.9.35",
		"postprocessing": "^6.37.8",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-icons": "^5.5.0",
		"steamworks.js": "^0.4.0",
		"three": "^0.180.0",
		"zustand": "^5.0.8"
	},
	"devDependencies": {
		"@eslint/js": "^9.38.0",
		"@vitejs/plugin-react": "^4.7.0",
		"electron": "^39.0.0",
		"electron-builder": "^26.0.12",
		"eslint": "^9.38.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^7.0.1",
		"globals": "^16.4.0",
		"vite": "^6.4.1"
	},
	"build": {
		"appId": "3739730",
		"productName": "Skull Hotel",
		"files": [
			"build/**/*",
			"electron/**/*",
			"public/**/*"
		],
		"directories": {
			"output": "dist",
			"buildResources": "public"
		},
		"extraResources": [
			{
				"from": "build",
				"to": "app/build"
			}
		],
		"win": {
			"target": "nsis",
			"icon": "public/images/web-app-manifest-512x512.png",
			"requestedExecutionLevel": "asInvoker"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"createDesktopShortcut": true
		}
	}
}

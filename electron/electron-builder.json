{
	"appId": "com.skullhotel.app",
	"productName": "Skull Hotel",
	"directories": {
		"output": "dist"
	},
	"files": ["build/**/*", "electron/**/*", "package.json"],
	"win": {
		"target": "nsis",
		"icon": null,
		"requestedExecutionLevel": "asInvoker",
		"applicationManifest": "electron/app.manifest"
	},
	"nsis": {
		"oneClick": false,
		"allowToChangeInstallationDirectory": true,
		"createDesktopShortcut": true,
		"createStartMenuShortcut": true,
		"shortcutName": "Skull Hotel"
	}
}

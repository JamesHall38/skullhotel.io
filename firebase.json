{
	"firestore": {
		"rules": "firestore.rules",
		"indexes": "firestore.indexes.json"
	},
	"hosting": {
		"public": "build",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		"rewrites": [
			{
				"source": "**",
				"destination": "/index.html"
			}
		],
		"headers": [
			{
				"source": "**/*.mp3",
				"headers": [
					{
						"key": "Accept-Ranges",
						"value": "bytes"
					},
					{
						"key": "Content-Type",
						"value": "audio/mpeg"
					}
				]
			}
		]
	},
	"database": {
		"rules": "database.rules.json"
	}
}
